### VARIABLES ###
CC = gcc
CFLAGS = -Wall

### REGLES ESSENTIELLES ###

all: main.o operation.o
	$(CC) $(CFLAGS) -o calculatrice main.o operation.o

main.o: main.c operation.o
	$(CC) $(CFLAGS) -c main.c

operation.o: operation.c
	$(CC) $(CFLAGS) -c operation.c

### REGLES OPTIONNELLES ###

clean: 
	rm -rf calculatrice operation.o main.o

run: 
	 ./calculatrice

### BUTS FACTICES ###

.PHONY : clean run 