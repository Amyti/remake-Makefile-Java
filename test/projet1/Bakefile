### VARIABLES ###
CC = gcc
CFLAGS = -Wall

### REGLES ESSENTIELLES ###

all: main.o utils.o
	$(CC) $(CFLAGS) -o app main.o utils.o
	@echo "Il s'agit d'un petit programme pour calculer une somme".

main.o: main.c
	$(CC) $(CFLAGS) -c main.c

utils.o: utils.c
	$(CC) $(CFLAGS) -c utils.c

### REGLES OPTIONNELLES ###

clean: 
	rm -rf app utils.o main.o

run: 
	 ./app

### BUTS FACTICES ###

.PHONY : clean run 
