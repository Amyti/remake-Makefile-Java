### VARIABLES ###
JC = javac
JCFLAGS = -encoding UTF-8 -implicit:none

JVM = java
JVMFLAGS = 

### REGLES ESSENTIELLES ###
all : Main.class Utils.class

Main.class: Main.java Utils.class
	$(JC) Main.java

Utils.class: Utils.java
	$(JC) Utils.java

### REGLES OPTIONNELLES ###
run:
	$(JVM) Main

clean:
	rm -rf Main.class Utils.class

### BUTS FACTICES ###

.PHONY : clean run